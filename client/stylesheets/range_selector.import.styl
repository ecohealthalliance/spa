.range-selector
  display flex
  align-items center
  justify-content flex-start
  margin 0
  li
    flex 1
    align-content center
    margin-right .5em
    border-radius 4px
    background-color lighten($primary-light, 80%)
    border 1px solid lighten($primary, 60%)
    text-align center
    cursor pointer
    padding .5em 1em
    color $body-text
    font-size .9em
    letter-spacing .04em
    &:last-of-type
      margin-right 0
    &.active
      color white
      &
      &:hover
        background $primary
        border-color darken($primary, 20%)
    &:hover
      background darken(@background-color, 5%)
      border-color darken(@background-color, 15%)

$slider-BG = darken($l-gray, 2%)

.slider-wrapper
  margin 50px 0

.slider-heading
  display flex
  align-items baseline
  justify-content space-between
  h3
    margin 0 0 10px 0
    font-size 1.2em
    font-weight 800
    display inline-block
  .heading-details
    vertical-align baseline
    font-size .95em
    font-weight 400
    color $d-gray
    text-align right

.noUi-horizontal
  .noUi-handle
    position relative
    top 15px
    width 22px
    height 30px
    border 2px solid white
    background lighten($primary, 10%)
    transition background .1s
    box-shadow none
    border-top-left-radius 100%
    border-top-right-radius 100%
    border-bottom-right-radius 8px
    border-bottom-left-radius 8px
    cursor pointer
    &::before
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      display block
      content "||"
      min-width 100%
      background none
      font-weight 800
      text-align center
      line-height 1em
      font-size 1em
      color lighten($primary, 30%)
      text-shadow 0 1px 0px rgba(0, 0 ,0 ,.3)
    &::after
      content ''
      display none
    &:focus
      outline 0
      border-color darken($primary, 30%)
      background darken($primary, 10%)
    &:active
      background $active
      border-color white
      &::before
        color lighten($active, 50%)

  .noUi-handle-lower
    left -10px
  .noUi-handle-upper
    left -10px

  .noUi-draggable
    cursor ew-resize

  .noUi-connect
    background $active
    box-shadow none
.noUi-origin
  background $slider-BG
  border-top-right-radius 4px
  border-bottom-right-radius 4px
  border-bottom-left-radius 0
  border-bottom-left-radius 0

.noUi-target
  border 0
  background $slider-BG
  box-shadow none

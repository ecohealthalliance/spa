.sidebar
  box-shadow none
  h1.logo
    width 85%
    margin 20px auto
    background url(../images/spa-logo.svg) no-repeat
    background-position center center
    min-height 100px
    text-indent -9999px

.sidebar-pane
  display block
  width $sidebar-width + 5px

.sidebar-pane-content
  padding 0 35px
  font-size 1em
  font-weight 400
  p
    color $d-gray

.sidebar-content
  background $whiteBG

.sidebar-main
  .sidebar-tabs
    border-left 3px solid darken($primary,10%)

.sidebar-tabs
  width 55px
  background $primary-transparent
  opacity 1
  &.right
    background linear-gradient(to right, rgba(255,0,0,0) 75% , $primary-transparent 25%)

#sidebar-plus-button
#sidebar-minus-button
  color white
  padding-top 8px
  padding-bottom 8px

.fa-white
  font-size 2em
  color white

.sidebar-zoom-in
  position absolute
  bottom 40px
  left 60px
  overflow hidden
  background $primary-transparent

.sidebar-zoom-out
  position absolute
  bottom 5px
  left 60px
  overflow hidden
  background $primary-transparent

.sidebar-zoom-out:hover
.sidebar-zoom-in:hover
  background $primary-transparent
  opacity .75

#sidebar
  overflow visible

#tableSidebar
  .sidebar-content
    background none
  &:not(.collapsed)
    .sidebar-tabs.right
      background linear-gradient(to right, rgba(255,0,0,0) 90% , $primary-transparent 10%)
    #sidebar-flightData-tab
      right 10%

#sidebar-flightData
  height 100%
  width 100%
  display flex
  flex-flow column
  background $whiteBG

#sidebar-flightData-tab
  verticallyCenter()
  right 25%
  height 60px
  border-top-left-radius 4px
  border-bottom-left-radius 4px
  border-top-right-radius 0
  border-bottom-right-radius 0
  width auto
  min-width 75%
  background $primary-transparent
  > a
    line-height normal
    display flex
    align-items center
    position absolute
    top 50%
    transform translate(0,-50%)
    font-size 1.25em
    color white
    transition background .2s
    &:hover
      background linear-gradient(to right, alpha(darken($primary-transparent, 30%), 70%),  transparent)
      color white
    .fa
      margin 0 3px
      &:first-of-type
        margin-left 5px
  &.active
    border-right 1px solid darken($primary-transparent, 10%)
    min-width 40%
    height 100px
    > a
      .fa
        margin-left 7px
      .fa-white-table
        display none

.table-tabs
  flexTabs($whiteBG, $primary-transparent, $l-gray, true)
  flex-shrink 0
  font-size 1.1em
  letter-spacing .02em
  border-bottom 3px solid $primary-transparent
  border-left 1px solid darken($primary-transparent, 10%)

  &.nav-tabs
    > li
      > a
        padding 15px

#dataTableContainer
  font-size small

.dataTableContent
  flex 1 100%
  position relative
  overflow-y scroll
  overflow-x hidden
  background alpha($whiteBG, 95%)

.activeRow
  color white
  background-color alpha($primary, 90%)

.tablesorter
  cursor pointer
  th
    border solid 1px $border-gray
    position relative
    &:hover
      background $l-gray
    &:focus
      background lighten($m-gray, 20%)
      outline none

  &.table
    > thead
      > tr
        > th
          padding-right 20px
    > tbody
      > tr
        > td
          border-color $l-gray

  .tablesorter-headerDesc
    sortingIcon('\f107') // angle down icon

  .tablesorter-headerAsc
    sortingIcon('\f106') // angle up icon

.sidebarRightFooter
  flex-shrink 0
  padding 20px 10px 20px 30px
  @extend .sidebar-footer
  height auto
  .export
    padding 0
    display flex
    justify-content center
    align-items center
    i
    button
      flex 1 100%
      flex-grow 1
      margin-right 5px
      &:last-of-type
        margin-right 0
    &:first-child
      flex 0
      margin-right 20px
  .downloadIcon
    margin 0
    padding 0
    font-size 2em
    margin-top 2px

  .exportData
    margin 0
